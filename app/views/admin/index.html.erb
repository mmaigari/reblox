    <style>
        .floating-toast {
            position: fixed;
            top:75%;
            right: 20px; /* Adjust distance from right edge */
            transform: translateY(-50%);
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
            padding: 10px 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 250px;
        }

        .floating-toast:hover {
            background-color: rgba(255, 255, 255, 0.95); /* Darker on hover */
        }

        .toast-content {
            flex: 1;
            margin-right: 10px;
        }

        .toast-text {
            font-weight: 600;
            font-size: 12px;
            line-height: 16px;
            color: #065374;
        }

        .arrow-icon {
            width: 20px;
            height: 20px;
        }

        .arrow-icon svg {
            width: 100%;
            height: 100%;
            fill: #065374;
            transition: fill 0.3s ease;
        }

        .floating-toast:hover .arrow-icon svg {
            fill: #00234c; /* Darker color on hover */
        }
    </style>


