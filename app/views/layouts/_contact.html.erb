<%= form_with model: @contact, local: true do |form| %>

<body id="cbody">

<div class="contact-container">
    <div class="contact-header">
        <span class="contact-title">Contact us</span>
        <span class="contact-subtitle">Our friendly team would love to hear from you.</span>
    </div>
    <div class="contact-info">
        <div class="contact-email">
            <svg class="w-5 h-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m8 4H8m8-8H8m12-2.25A2.25 2.25 0 0017.75 2h-11.5A2.25 2.25 0 004 4.25v15.5A2.25 2.25 0 006.25 22h11.5A2.25 2.25 0 0020 19.75V4.25z"/></svg>
            <span>hello@ade.io</span>
        </div>
    </div>
    <div class="contact-form-container">
        <div class="contact-form-group">
            <label for="name">Full Name</label>
            
            <%= form.text_field :name, placeholder:'Enter Name', id:'name' %>
        </div>
        <div class="contact-form-group">
            <label for="email">Email</label>
            <%= form.email_field :email, placeholder:'Enter Email Address', id:'email' %>
        </div>
        <div class="contact-form-group">
            <label for="message">Message</label>
            <%= form.text_area :message, placeholder:'Type message', id:'message' %>
          
        </div>
   
        <%= form.submit "Contact Us", class:'contact-submit-button'  %>
    </div>
</div>
   

       

   
        
</body>
<% end %>
<style type="text/css">
    .cbody {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .contact-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2.5rem;
        padding: 20px;
    }

    .contact-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        max-width: 100%;
        text-align: center;
    }

    .contact-header .contact-title {
        font-weight: bold;
        font-size: 36px;
        color: #00234c;
    }

    .contact-header .contact-subtitle {
        font-weight: normal;
        font-size: 16px;
        color: black;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .contact-info .contact-email {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 16px;
        color: black;
    }

    .contact-form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        width: 100%;
        max-width: 616px;
    }

    .contact-form-group {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .contact-form-group label {
        font-size: 16px;
        color: #00234c;
    }

    .contact-form-group input,
    .contact-form-group textarea {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #8c8c8c;
        border-radius: 0.5rem;
        font-size: 14px;
        color: #8c8c8c;
    }

    .contact-form-group textarea {
        resize: vertical;
        height: 100px;
    }

    .contact-submit-button {
        width: 100%;
        max-width: 206px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #0fc3ff;
        border-radius: 1rem;
        font-weight: bold;
        font-size: 18px;
        color: #00234c;
        cursor: pointer;
        text-align: center;
        border: 2px solid transparent;
    }

    @media (max-width: 768px) {
        .contact-header .contact-title {
            font-size: 30px;
        }

        .contact-header .contact-subtitle {
            font-size: 14px;
        }

        .contact-form-container {
            padding: 0 10px;
        }
    }

    @media (max-width: 480px) {
        .contact-header .contact-title {
            font-size: 24px;
        }

        .contact-header .contact-subtitle {
            font-size: 12px;
        }

        .contact-form-group input,
        .contact-form-group textarea {
            font-size: 12px;
            padding: 0.5rem;
        }

        .contact-submit-button {
            font-size: 16px;
            padding: 0.5rem;
        }
    }

</style>