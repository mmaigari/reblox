
    <style>
      .body-loop {
          margin: 0;
          font-family: Arial, sans-serif;
      }

      .loop-container {
          display: flex;
          flex-direction: column;
          gap: 2.5rem;
          background-color: #00234c;
          padding: 40px 20px;
          border-radius: 1rem;
      }

      .loop-header {
          display: flex;
          flex-direction: column;
          justify-content: center;
          gap: 1rem;
      }

      .loop-header .loop-title {
          font-weight: bold;
          font-size: 48px;
          color: #effaff;
      }

      .loop-header .loop-subtitle {
          font-weight: normal;
          font-size: 16px;
          color: #effaff;
      }

      .loop-form-container {
          display: flex;
          gap: 1rem;
          flex-wrap: wrap;
          align-items: center;
      }

      .loop-input-box {
          display: flex;
          flex-direction: column;
          gap: 1rem;
          width: 100%;
          max-width: 390px;
      }

      .loop-input-field {
          width: 35%;
          height: 50px;
          display: flex;
          align-items: center;
          padding: 0 1rem;
          border-radius: 0.5rem;
          border: 1px solid #8c8c8c;
          color: #8c8c8c;
          font-size: 14px;
      }

      .loop-submit-button {
          width: auto;
          max-width: 250px; /* Adjusted max-width */
          height: 50px;
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: #0fc3ff;
          padding: 0 2rem;
          border-radius: 1rem;
          border: 2px solid transparent;
          font-weight: bold;
          font-size: 18px;
          color: #00234c;
          cursor: pointer;
          text-align: center;
          white-space: nowrap; /* Ensures text doesn't wrap */
          overflow: hidden; /* Prevents overflow */
          text-overflow: ellipsis; /* Adds ellipsis for overflow text */
      }

      @media (max-width: 768px) {
          .loop-header .loop-title {
              font-size: 36px;
          }

          .loop-header .loop-subtitle {
              font-size: 14px;
          }

          .loop-form-container {
              flex-direction: column;
              align-items: center;
          }

          .loop-submit-button {
              width: auto;
              max-width: 100%;
          }
      }

      @media (max-width: 480px) {
          .loop-header .loop-title {
              font-size: 28px;
          }

          .loop-header .loop-subtitle {
              font-size: 12px;
          }

          .loop-input-field,
          .loop-submit-button {
              max-width: 100%;
          }

          .loop-submit-button {
              width: auto;
              max-width: 100%;
              padding: 0 1rem;
          }
      }

    </style>

<%= form_with model: Sloop.new, url: loop_index_path, local: true do |form| %>

<body id="body-loop">

<div id="bodyloop" class="loop-container">
    <div class="loop-header">
        <span class="loop-title">Stay in the loop</span>
        <span class="loop-subtitle">Stay ahead of the curve with inspiring content, special insights and industry trends tailored to your investment journey in the ever-evolving digital landscape.</span>
    </div>
    <div class="loop-form-container">
        <%= form.text_field :name, class:'loop-input-field', placeholder:'Enter Full Name' %>
       <%= form.email_field :email, class:'loop-input-field', placeholder:'Enter Email Address' %>
        <%= form.submit "Stay in the Loop", class:'loop-submit-button'  %>
    </div>
</div>

</body>
<% end %>

